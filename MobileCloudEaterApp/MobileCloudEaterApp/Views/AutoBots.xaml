<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileCloudEaterApp.Views.AutoBots">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the Bot Runner! Click to run the bot" VerticalOptions="Center" />
            <Label Text="Enter in a player name: " />
            <Entry Placeholder="Player Name" Text="{Binding DesiredPlayerName}" />
            <Button Text="Join Bot" Command="{Binding JoinBotCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>